<time datetime="">
  <%= micropost.user.name %>
   | 投稿 <%= time_ago_in_words(micropost.created_at) %>前
  <% if current_user?(micropost.user) || current_user.admin? %>
    | <%= link_to "削除", micropost, method: :delete,
                                 data: { confirm: "本当に削除しますか?" },
                                 title: micropost.content %>
  <% end %>
  <% if micropost.name != nil %>
    | <%= link_to "拡大", micropost_path(micropost) %><p>
  <% end %>
</time>
<section>
  <% if micropost.name != nil %>
    <p class='cf'>
      <img src="<%= micropost_download_small_path(micropost) %>"/>
      <%= micropost.content %>
    </p>
  <% else %>
    <p class='cf'>
      <%= micropost.content %>
    </p>
  <% end %>
</section>

