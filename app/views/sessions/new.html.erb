<% provide(:title, "サインイン") %>
<h1>サインイン</h1>

<div class="row-fluid">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "サインイン", class: "btn btn-normal btn-primary" %>
    <% end %>
  </div>
</div>
