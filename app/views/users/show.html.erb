<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.name %>
      </h1>
      <span>
        <% if @user.maiden %>
          <%= @user.maiden %>&nbsp;<%= @user.given %>（<%= @user.family %>）
        <% else %>
          <%= @user.family %>&nbsp;<%= @user.given %>
        <% end %>
      </span>
      <%= @user.notes %>
    </section>
  </aside>
  
  <table class="commonTable">
    <tr>
      <th>郵便番号</th>
      <td>
        <%= @user.pobox %>
      </td>
    </tr>
    <tr>
      <th>住所</th>
      <td>
        <%= @user.region %><%= @user.city %><%= @user.street %>
      </td>
    </tr>
    <tr>
      <th>電話</th>
      <td><%= @user.tel %></td>
    </tr>
    <tr>
      <th>携帯</th>
      <td><%= @user.mobile %></td>
    </tr>
    <tr>
      <th>メール</th>
      <td><%= @user.email %></td>
    </tr>
  </table>
 
