<% provide(:title, 'お知らせ更新') %>
<article id="contents">
<header class="head">
<h1>お知らせ更新</h1>
</header>

<section class="form">
  <%= form_for(@article) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <dl class="formList">
      <dt><%= f.label :title, "題名" %></dt>
      <dd><%= f.text_field :title %></dd>

      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :group_id, :value => current_user.group_id %>
<!--
      <dt><%= f.label :date, "日付" %></dt>
      <dd><%= f.text_field :date %></dd>
-->
      <dt><%= f.label :content, "内容" %></dt>
      <dd><%= f.text_area :content, rows: 6 %><dd>
    </dl>
    <%= f.submit "お知らせ更新", class: "btn btn-normal btn-primary" %>
  <% end %>
</section>
</article>
